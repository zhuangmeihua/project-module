body
  background-color #efefef

.header
  display flex
  height 50px
  background-color #fff

.header .icon-back
  display block
  width 50px
  height 50px
  background url("../../img/nav_back_icon@2x.png") no-repeat center
  background-size 20%

.header .header_title
  flex 1
  padding-right 50px
  line-height 50px
  text-align center

.info-cells
  margin-top 20px
  background-color #fff

.info-cell
  display flex
  padding 0 15px
  line-height 40px
  .info-name
    display inline-block
    flex 3
    color #838181
    font-size .875em
  .info-content
    flex 4
    text-indent 10px

.image-cell
  display flex
  background-color #fff
  .image-block
    flex 1
    height 90px
    img
      width 80%
      height 70px
      background-color #838181
    .title
      margin 0 auto
      text-align center