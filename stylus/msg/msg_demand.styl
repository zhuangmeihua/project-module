$orange = #ED692B
body
  background-color #efefef
.tab_box
  height 32px
  padding 9px 0
  background-color #fff
.tab_bar
  display flex
  width 80%
  height 30px
  margin 0 auto
  padding 0
  list-style none
  border-radius 5px
  border 1px solid $orange
  color $orange
  .tab_bar-cell
    position relative
    flex 1
    line-height 30px
    text-align center
    &:after
      content ''
      position absolute
      top 0
      right 0
      display block
      width 1px
      height 30px
      background-color $orange
    &:last-child:after
      content ''
      display none
    &.active
      background-color $orange
      color #fff
