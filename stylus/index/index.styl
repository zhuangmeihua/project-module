body
  background-color #efefef
.header
  display flex
  height 50px
  position absolute
  top 0
  z-index 5
  width 100%
  color #fff
  background-color transparent
  .icon-back
    display block
    width 65px
    height 50px
    padding-left 15px
    background transparent url("../../img/index/nav_icon_down@2x.png") no-repeat left 50px center
    background-size 12px 6px
    line-height 50px
    font-style normal
  .header_title
    flex 1
    padding-right 80px
    line-height 50px
    text-align center

.search_box
  position absolute
  top 50px
  right 15px
  left 15px
  z-index 5
  .search_input
    height 30px
    border-radius 3px
    background-color #f1f1f1
    text-align center
    line-height 30px
    color #999
    .icon-search
      display inline-block
      width 30px
      height 30px
      background url("../../img/index/nav_icon_search@2x.png") no-repeat center
      background-size 16px
      vertical-align bottom

.slider_box
  width 100%
  height 320px
  overflow hidden
  .slider_container
    width 300%
    transition all .5s
    transform translateX(0)
    &:after
      content ''
      display block
      visibility hidden
      height 0
      clear both
.slider_block
  float left
  width 375px
  height 320px
  background url("../../img/index/banner_img@2x.jpg") no-repeat center
  &:nth-child(2)
    background url("../../img/index/slider02.jpg") no-repeat center
  &:nth-child(3)
    background url("../../img/index/slider03.jpg") no-repeat center
  &:nth-child(4)
    background url("../../img/index/slider04.jpg") no-repeat center
  &:nth-child(5)
    background url("../../img/index/slider05.jpg") no-repeat center

.point_box
  position absolute
  top 280px
  left 35%
  z-index 99
  width 30%
  height 16px
  text-align center
  .point_block
    display inline-block
    width 16px
    height 16px
    background url("../../img/index/banner_icon_point_nor@2x.png") no-repeat center
    background-size 10px
    &.active
      background url("../../img/index/banner_icon_point_press@2x.png") no-repeat center
      background-size 10px
.query_box
  width 100%
  height 50px
  margin-top 10px
  display flex
  background-color #ffffff
  .query_block
    flex 1
    &.active
      background-color #0000ed
    .text
      height 35px
      text-align center
      line-height 35px
      font-size 14px
      display block
    .icon
      height 15px
      background url("../../img/index/content_icon02_nor@2x.png") no-repeat center
      background-size 12px
      display block
      margin-top -10px
  .query_price
    width 50px
    height 50px
    background url("../../img/index/content_icon01_nor@2x.png") no-repeat center
    background-size 30px
    &.active-down
      background url("../../img/index/content_icon01_down@2x.png") no-repeat center
      background-size 30px
    &.active-up
      background url("../../img/index/content_icon01_litre@2x.png") no-repeat center
      background-size 30px
.block_box
  height 100px
  padding 15px
  background-color #FFFFFF
  margin-top 10px
  position relative
  .img_box
    width 256px
    height 180px
    background url("../../img/index/content_img_list@2x.png") no-repeat  left center
    background-size 128px 100px
    position absolute
    top -30px
  .info_box
    padding-left 150px
    position relative
    .info-title
      color #323232
      margin-bottom 3px
      .title_left
        font-size 18px
      &:after
        content ''
        width 28px
        height 26px
        background url("../../img/index/collect_icon_nor@2x.png") no-repeat right  center
        background-size 14px 13px
        position absolute
        right 0px
        top -5px
    .heart:after
      content ''
      width 28px
      height 26px
      background url("../../img/index/collect_icon_press@2x.png") no-repeat right  center
      background-size 14px 13px
      position absolute
      right 0px
      top -5px
      z-index 5
    .info-address
      font-size 16px
      color #9f9f9f
      margin-bottom 3px
    .info-tag_box
      width 70px
      height 25px
      border 1px solid orange
      border-radius 5px
      text-align center
      .t_b_t
        font-size 0.8rem
        color orange
        text-align center
        line-height 25px
    .info-price
      font-size 14px
      margin-top 8px
      position relative
      .price_left
        color #9f9f9f
        em
          font-style normal
          color orange
          padding-right 5px
      .price_right
        position absolute
        right -5px
        color #9f9f9f
        top 1px
